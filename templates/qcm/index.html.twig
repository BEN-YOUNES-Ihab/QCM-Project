{% extends 'base.html.twig' %}

{% block title %}QCM index{% endblock %}

{% block body %}
    <h1>QCM index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for q_c_m in q_c_ms %}
            <tr>
                <td>{{ q_c_m.id }}</td>
                <td>{{ q_c_m.Title }}</td>
                <td>{{ q_c_m.Description }}</td>
                <td>{{ q_c_m.Time ? q_c_m.Time|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_q_c_m_show', {'id': q_c_m.id}) }}">show</a>
                    <a href="{{ path('app_q_c_m_edit', {'id': q_c_m.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_q_c_m_new') }}">Create new</a>
{% endblock %}
